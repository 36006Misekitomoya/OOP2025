<Window x:Class="WeatherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="お天気アプリ" Width="400" Height="600"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- 背景グラデーション -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#FFB3E5FC" Offset="0"/>
                <GradientStop Color="#FFFFFFFF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- 天気カード -->
        <Border Background="White" CornerRadius="20" Padding="20" Margin="20"
                VerticalAlignment="Center" HorizontalAlignment="Center" 
                Effect="{DynamicResource DropShadowEffect}">
            <StackPanel HorizontalAlignment="Center">

                <TextBlock Text="お天気アプリ" FontSize="28" FontWeight="Bold"
                           Foreground="#333333" HorizontalAlignment="Center" Margin="0,10"/>

                <!-- 都道府県入力 -->
                <TextBox x:Name="CityInput" Width="220" Height="32" FontSize="16"
                         HorizontalAlignment="Center" Margin="0,10"
                         Text="都市名を入力" Foreground="Gray"
                         GotFocus="CityInput_GotFocus" LostFocus="CityInput_LostFocus"/>

                <Button Content="天気を取得" Width="150" Height="32" Margin="0,10"
                        Click="GetWeatherButton_Click" Background="#FF29B6F6"
                        Foreground="White" FontWeight="Bold"/>

                <!-- 天気アイコン -->
                <TextBlock x:Name="WeatherIcon" 
           FontSize="64" 
           HorizontalAlignment="Center" 
           Margin="0,10"
           TextAlignment="Center"/>

                <!-- 気温 -->
                <TextBlock x:Name="TemperatureText" FontSize="48" FontWeight="Bold"
                           Foreground="#333333" HorizontalAlignment="Center" Margin="0,5"/>

                <!-- 更新時刻 -->
                <TextBlock x:Name="DescriptionText" FontSize="16" Foreground="#666666"
                           HorizontalAlignment="Center" Margin="0,5"/>

                <!-- 風速 -->
                <TextBlock x:Name="WindText" FontSize="16" Foreground="#666666"
                           HorizontalAlignment="Center" Margin="0,5"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
