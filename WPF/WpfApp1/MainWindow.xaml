<Window x:Class="WeatherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Weather App" Width="500" Height="700"
        WindowStartupLocation="CenterScreen"
        Background="#FFEDF7FA">

    <Grid>
        <!-- 背景グラデーション -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#FFB3E5FC" Offset="0"/>
                <GradientStop Color="#FFE1F5FE" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- メインカード -->
        <Border CornerRadius="30" Background="White" Padding="25"
                Margin="30" VerticalAlignment="Center" 
                Effect="{DynamicResource {x:Static SystemParameters.DropShadowKey}}">
            <StackPanel HorizontalAlignment="Center">

                <!-- タイトル -->
                <TextBlock Text="お天気アプリ" 
                           FontSize="32" FontWeight="Bold" Foreground="#FF0288D1"
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- 都市選択 -->
                <ComboBox x:Name="CitySelector" Width="220" Height="40"
                          FontSize="18" SelectionChanged="CitySelector_SelectionChanged"
                          Margin="0,0,0,20">
                    <ComboBoxItem Content="東京"/>
                    <ComboBoxItem Content="大阪"/>
                    <ComboBoxItem Content="北海道"/>
                    <ComboBoxItem Content="福岡"/>
                </ComboBox>

                <!-- 天気アイコン -->
                <Image x:Name="WeatherIcon" Width="160" Height="160" Margin="0,0,0,20"/>

                <!-- 気温 -->
                <TextBlock x:Name="TemperatureText" 
                           FontSize="72" FontWeight="Bold" 
                           Foreground="#FF0288D1" HorizontalAlignment="Center" />

                <!-- 天気説明 -->
                <TextBlock x:Name="DescriptionText" 
                           FontSize="22" Foreground="#FF0288D1" 
                           HorizontalAlignment="Center" Margin="0,10"/>

                <!-- 風速 -->
                <TextBlock x:Name="WindText" 
                           FontSize="18" Foreground="#FF0288D1" 
                           HorizontalAlignment="Center" Margin="0,5"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
