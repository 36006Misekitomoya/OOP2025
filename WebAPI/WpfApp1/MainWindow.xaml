<Window x:Class="WeatherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Weather App" Width="500" Height="700"
        WindowStartupLocation="CenterScreen"
        Background="#FF2D2F36">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#3A3F47" Offset="0" />
                <GradientStop Color="#1F2023" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>

        <Border CornerRadius="20" Background="#40FFFFFF" Padding="20"
                Margin="30" VerticalAlignment="Center">
            <StackPanel HorizontalAlignment="Center">

                <TextBlock Text="お天気アプリ" 
                           FontSize="30" FontWeight="Bold" Foreground="White"
                           HorizontalAlignment="Center" Margin="0 10"/>

                <ComboBox x:Name="CitySelector" Width="200" Margin="0 20"
                          FontSize="18" SelectionChanged="CitySelector_SelectionChanged">
                    <ComboBoxItem Content="東京"/>
                    <ComboBoxItem Content="大阪"/>
                    <ComboBoxItem Content="北海道"/>
                    <ComboBoxItem Content="福岡"/>
                </ComboBox>

                <Image x:Name="WeatherIcon" Width="150" Height="150" Margin="0 10"/>

                <TextBlock x:Name="TemperatureText"
                           FontSize="70" FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"/>

                <TextBlock x:Name="DescriptionText"
                           FontSize="20" Foreground="White"
                           HorizontalAlignment="Center" Margin="0 20"/>

                <TextBlock x:Name="WindText"
                           FontSize="18" Foreground="White"
                           HorizontalAlignment="Center" Margin="0 5"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>
